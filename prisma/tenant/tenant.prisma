}

enum ProductStatus {
  IN_STOCK // –Ω–∞—Ö–æ–¥–∏—Ç—Å—è –Ω–∞ —Å–∫–ª–∞–¥–µ
  SOLD // –ø—Ä–æ–¥–∞–Ω
  RETURNED // –≤–æ–∑–≤—Ä–∞—â—ë–Ω
  LOST // —É—Ç–µ—Ä—è–Ω / —Å–ø–∏—Å–∞–Ω
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum OrgUserRole {
  OWNER
  ADMIN
  SELLER
  ACCOUNTANT
  MANAGER
}

enum CustomerType {
  CLIENT
  SUPPLIER
}

enum PriceType {
